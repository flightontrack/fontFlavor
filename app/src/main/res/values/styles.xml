<resources>
    <!-- LARGE FONT SIZE -->


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:textSize">"@style/large_title_text</item>-->
        <item name="android:textSize">20sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
         <!--Tints the input fields like checkboxes and text fields-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="android:textColorSecondary">@color/red</item>-->
        <!-- Overflow menu background -->
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/winbackgr</item> <!-- main window background  -->

        <!-- Spinner styles -->
        <!--<item name="spinnerStyle">@style/SpinnerItemBcgr</item>-->
        <item name="android:spinnerItemStyle">@style/simple_spinner_item</item>
        <item name="android:textAppearanceListItemSmall">@style/simple_list_item_single_choice</item>

    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/winbackgr</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/black</item>

        <!-- overflow menu points color -->
        <item name="colorControlNormal">@color/winbackgr</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@android:color/holo_green_light</item>
        <!-- background for bar label  -->
        <item name="android:background">@color/colorPrimary</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/AppSpinnerItem</item>-->
    </style>

    <!-- This configures the styles for text within overflow menu  -->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/winbackgr</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <!--<item name="actionMenuTextColor">@color/colorGreen</item>-->
        <!--background for text -->
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Cards" parent="@style/AppTheme">
        <!--background for text -->
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:paddingStart">@dimen/activity_card_padding_left</item>
        <item name="android:paddingEnd">@dimen/activity_card_padding_right</item>
        <item name="android:paddingTop">@dimen/activity_card_padding_top</item>
        <item name="android:paddingBottom">@dimen/activity_card_padding_bottom</item>
    </style>

    <style name="AppSpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:background">@color/colorPrimaryLight</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
        <item name="colorControlNormal">@color/darkred</item>
    </style>

    <style name="SpinnerItemBcgr">
        <!--<item name="android:background">@color/colorPrimaryLight</item>-->
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
    </style>

    <style name="simple_spinner_item" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/AppSpinnerItemTextAppearance</item>
    </style>
    <style name="AppSpinnerItemTextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_menu_material</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="simple_list_item_single_choice" parent="TextAppearance.AppCompat.Subhead">
        <!--<item name="android:textSize">13sp</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/AppSpinnerDropDownItemTextAppearance</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="AppSpinnerDropDownItemTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/green</item>
    </style>


    <style name="BottomArea">
        <!--background for text -->
        <!--<item name="android:background">@color/winbackgr</item>-->
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="label_text">
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <!--<item name="android:layout_marginRight">10dp</item>-->
    </style>
    <style name="label_label">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    <style name="label_text_small" parent="AppTheme">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="track_button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:shadowColor">#FF000000</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">-1</item>-->
        <!--<item name="android:shadowRadius">0.2</item>-->
        <item name="android:textSize">32dip</item>
        <item name="android:background">@drawable/bttn_status_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:layout_marginLeft">5dp</item>-->
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>
    <style name="track_button_small" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#1B1B1B</item>
        <!--<item name="android:shadowColor">#FF000000</item>-->
        <!--<item name="android:shadowDx">0</item>-->
        <!--<item name="android:shadowDy">-1</item>-->
        <!--<item name="android:shadowRadius">0.2</item>-->
        <item name="android:textSize">28dip</item>
        <item name="android:background">@drawable/bttn_status_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>


    <style name="checkBoxComponent" parent="AppTheme">
        //Checked color
        <item name="colorAccent">@color/colorPrimary</item>
        //Checkbox border color
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

</resources>
