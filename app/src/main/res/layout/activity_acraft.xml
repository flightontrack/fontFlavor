<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_margin6"
    android:paddingRight="@dimen/padding_margin6"
    android:paddingTop="@dimen/padding_margin4"
    android:paddingBottom="@dimen/padding_margin4"
    >

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <TextView
        android:id="@+id/txtBlueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/instructions2"
        android:padding="10dip"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_weight="7"
        android:textStyle="bold|italic" />

    <Switch
        android:id="@+id/switch_nfc"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
 />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            style="@style/label_text_small"
            android:layout_height="wrap_content"
            android:text="Aircraft Number"
            android:layout_weight="6.5"
            />

        <AutoCompleteTextView
            android:id="@+id/txtAcftRegNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="3.5"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aircraft Nickname"
            style="@style/label_text_small"
            android:layout_weight="4"
            />

        <EditText
            android:id="@+id/txtAcftName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:inputType="text"
            android:text=""
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/label_pilotphone"
            style="@style/label_text"
            android:typeface="normal"
            android:clickable="false"
            />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_acft_done"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_acft_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btn_acft_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="3"/>
    </LinearLayout>
