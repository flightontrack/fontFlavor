<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            style="@style/label_text_small"
            android:layout_height="wrap_content"
            android:text="Aircraft Number"
            android:layout_weight="6.5"
            />

        <EditText
            android:id="@+id/txtAcftRegNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:layout_weight="3.5"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aircraft Name"
            style="@style/label_text_small"
            android:layout_weight="4"
            />

        <EditText
            android:id="@+id/txtAcftName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="@string/label_pilotphone"
            style="@style/label_text"
            android:typeface="normal"
            android:clickable="false"
            />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:gravity="end" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:weightSum="10">
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:weightSum="10" >

        <Button
            android:id="@+id/btn_acft_done"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_weight="3" />

        <Button
            android:id="@+id/btn_acft_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_weight="3" />

        <Button
            android:id="@+id/btn_acft_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aircraft Tag ID"
            style="@style/label_text"
            android:layout_weight="5"
            />

        <TextView
            android:id="@+id/txtAcftTagId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:layout_weight="5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Optional Info:"
            style="@style/label_text"
            android:layout_weight="5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/label_text_small"
            android:text="Make"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/txtAcftMake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:layout_weight="8"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/label_text_small"
            android:text="Model"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/txtAcftModel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:layout_weight="8"
            android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            style="@style/label_text_small"
            android:layout_height="wrap_content"
            android:text="Series"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/txtAcftSeries"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:inputType="text"
            android:layout_weight="8"
            android:gravity="end"/>
    </LinearLayout>

</LinearLayout>
